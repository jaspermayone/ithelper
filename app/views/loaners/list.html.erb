<div class="container-responsive px-3 pt-3">
  <div class="box">
    <div class="row mb-3 align-items-center">
      <div class="col">
        <u>
          <h3 class="mb-0">Loaners: </h3>
        </u>
      </div>
      <div id="fil" class="col-auto d-flex align-items-center">
        <label for="status-filter" class="mr-2 mb-0">Filter by Status:</label>
        <%= select_tag 'status-filter', options_for_select(['All', 'Available', 'Loaned', 'Disabled', 'Maintenance'], 'All'), class: 'form-control' %>
      </div>
      <div class="col-auto">
        <%= link_to 'Back to Overview', overview_path, class: 'btn btn-primary' %>
      </div>
    </div>

    <div class="table-responsive">
      <table class="table is-bordered" id="loaners-table">
        <thead>
          <tr>
            <th class="id-col">ID</th>
            <th class="status-col">Status</th>
            <th class="asset-tag-col">Asset Tag</th>
            <th class="serial-num-col">Serial Number</th>
            <th class="loan-count-col">Loan Count</th>
            <th>Last User</th>
            <th class="actions-col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @loaners.each do |loaner| %>
            <% row_class = case loaner.status.downcase
                          when 'available' then 'available'
                          when 'loaned' then 'loaned'
                          when 'disabled' then 'disabled'
                          when 'maintenance' then 'maintenance'
                          else ''
                          end %>
            <tr class="<%= row_class %>">
              <td><%= loaner.loaner_id %></td>
              <td><%= loaner.status.capitalize %></td>
              <td><%= link_to loaner.asset_tag, loaner_path(loaner), class: "lnk" %></td>
              <td><%= link_to loaner.serial_number, loaner_path(loaner), class: "lnk" %></td>
              <td><%= loaner.loans.count %></td>
              <td><%= loaner.current_loan&.borrower&.full_name || 'N/A' %></td>
              <td>
                <% if loaner.available? %>
                  <%= link_to "Loan Device", overview_path, class: "btn btn-primary btn-sm" %>
                  <%= link_to "Mark Broken", broken_loaner_path(loaner),  class: "btn btn-danger btn-sm" %>
                <% elsif loaner.loaned? %>
                  <%= link_to "Check In", return_loaner_path(loaner), class: "btn btn-success btn-sm" %>
                <% elsif loaner.disabled? %>
                  <%= link_to "Enable Device", enable_loaner_path(loaner), class: "btn btn-success btn-sm" %>
                <% elsif loaner.maintenance? %>
                  <%= link_to "Repair", repair_loaner_path(loaner), class: "btn btn-success btn-sm" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<style>
  .table-responsive {
    height: 75vh;
    overflow-y: auto;
  }

  .table thead th {
    position: sticky;
    top: 0;
    z-index: 1;
    background: white;
  }

  .id-col {
    width: 50px;
  }

  .status-col {
    width: 100px;
  }

  .asset-tag-col {
    width: 120px;
  }

  .serial-num-col {
    width: 100px;
  }

  .loan-count-col {
    width: 120px;
  }

  .available {
    background-color: #d4edda;
  }

  .loaned {
    background-color: #fff3cd;
  }

  .disabled {
    background-color: #f8d7da;
  }

  .maintenance {
    background-color: #cce5ff;
  }

  #fil {
    border: 1px dashed #902517;
    border-radius: 5px;
    padding: 3px;
  }

  .lnk {
    color: #000;
    font-style: italic;
    text-decoration: underline;
  }

  .btn {
    margin-left: 5px;
  }

  label[for="status-filter"] {
    white-space: nowrap;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const filterSelect = document.getElementById('status-filter');
    const rows = document.querySelectorAll('#loaners-table tbody tr');

    filterSelect.addEventListener('change', function() {
      const selectedStatus = filterSelect.value.toLowerCase();

      rows.forEach(row => {
        const status = row.classList.contains(selectedStatus);
        if (selectedStatus === 'all' || status) {
          row.style.display = '';
        } else {
          row.style.display = 'none';
        }
      });
    });

    function applyStatusColors() {
      rows.forEach(row => {
        const status = row.classList[0];
        row.classList.remove('available', 'loaned', 'disabled', 'maintenance');
        row.classList.add(status);
      });
    }

    applyStatusColors();
  });
</script>

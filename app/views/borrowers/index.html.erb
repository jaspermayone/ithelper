<div class="container-responsive px-3 pt-3">
  <div class="box">
    <div>
      <h1>Borrower List</h1>
      <p>(sorted by # of loans)</p>
    </div>

    <div class="table-container">
      <table class="table is-striped is-hoverable">
        <thead>
          <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Graduation Year</th>
            <th>Loans</th>
            <th>Created At</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <%# <% @borrowers.each do |borrower| %>
            <% @borrowers.sort_by { |borrower| -borrower.loans.count }.each do |borrower| %>
              <tr>
                <td><%= borrower.first_name %></td>
                <td><%= borrower.last_name %></td>
                <td><%= borrower.email %></td>
                <td><%= borrower.graduation_year %></td>
                <td><%= borrower.loans.count %></td>
                <td><%= borrower.created_at.strftime("%A, %B %e at %l:%M %p %Z") %></td>
                <td>
                  <%= link_to 'View', borrower_path(borrower), class: 'button is-small is-link' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <%= link_to 'Back to Overview', overview_path, class: 'button is-link' %>
    </div>

    <style>
      .table-container {
        height: 70vh;
        overflow-y: auto;
        border: 1px solid #e3e3e3;
        border-radius: 5px;
      }

      .table thead th {
        position: sticky;
        top: 0;
        background-color: white;
      }
    </style>
  </div>
